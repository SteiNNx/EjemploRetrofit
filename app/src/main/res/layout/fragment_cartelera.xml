<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.steinnxlabs.cineromeo30.fragments.CarteleraFragment">


    <TextView
        android:id="@+id/tv_cartelera_fragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cartelera"
        android:textSize="35dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="11dp" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_frag_cartelera"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="11dp"
        android:layout_below="@+id/tv_cartelera_fragment"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
